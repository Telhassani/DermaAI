# Backend Environment Variables
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=postgresql://dermai_user:dermai_pass_dev_only@localhost:5432/dermai_db

# Redis
REDIS_URL=redis://:dermai_redis_pass_dev@localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development
DEBUG=True

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# AI APIs
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
KANTESTI_API_KEY=...

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@dermai.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=DermAI <noreply@dermai.com>

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10

# Monitoring
SENTRY_DSN=
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# HIPAA Compliance
HIPAA_AUDIT_ENABLED=True
HIPAA_AUDIT_LOG_DIR=./logs/audit
DATA_RETENTION_DAYS=2555

# Backup
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=./backups

# Celery
CELERY_BROKER_URL=redis://:dermai_redis_pass_dev@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:dermai_redis_pass_dev@localhost:6379/0
