# ========================================
# DermAI - Environment Variables Template
# ========================================
# INSTRUCTIONS:
# 1. Copier ce fichier: cp .env.example .env
# 2. Remplir les valeurs r√©elles
# 3. NE JAMAIS committer .env dans Git
# ========================================

# =====================================
# DATABASE
# =====================================
DATABASE_URL=postgresql://dermai_user:dermai_pass_dev_only@localhost:5432/dermai_db
# Alternative for Docker:
# DATABASE_URL=postgresql://dermai_user:dermai_pass_dev_only@postgres:5432/dermai_db

# =====================================
# REDIS
# =====================================
REDIS_URL=redis://:dermai_redis_pass_dev@localhost:6379/0
# Alternative for Docker:
# REDIS_URL=redis://:dermai_redis_pass_dev@redis:6379/0

# =====================================
# SECURITY
# =====================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-me-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =====================================
# ENVIRONMENT
# =====================================
ENVIRONMENT=development
# Options: development | staging | production
DEBUG=True

# =====================================
# CORS (Frontend Origins)
# =====================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# =====================================
# AI APIs
# =====================================

# Anthropic Claude (Primary)
ANTHROPIC_API_KEY=sk-ant-api03-...
# Get your key at: https://console.anthropic.com/

# OpenAI (Fallback)
OPENAI_API_KEY=sk-proj-...
# Get your key at: https://platform.openai.com/

# Kantesti Lab Analysis (Optional)
KANTESTI_API_KEY=...
# Get your key at: https://kantesti.com/

# RxNav (Free - No API key needed)
# Documentation: https://lhncbc.nlm.nih.gov/RxNav/

# =====================================
# EMAIL (Notifications)
# =====================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@dermai.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=DermAI <noreply@dermai.com>

# =====================================
# SMS (Twilio - Optional)
# =====================================
TWILIO_ACCOUNT_SID=...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1234567890

# =====================================
# FILE STORAGE
# =====================================
# Local development
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10

# Production (AWS S3)
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_S3_BUCKET=dermai-medical-images
# AWS_REGION=us-east-1

# =====================================
# MONITORING & LOGGING
# =====================================
# Sentry (Error Tracking)
SENTRY_DSN=https://...@sentry.io/...

# Log Level
LOG_LEVEL=INFO
# Options: DEBUG | INFO | WARNING | ERROR | CRITICAL

# =====================================
# RATE LIMITING
# =====================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =====================================
# FRONTEND (Next.js)
# =====================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_NAME=DermAI
NEXT_PUBLIC_APP_VERSION=0.1.0

# =====================================
# TESTING
# =====================================
TEST_DATABASE_URL=postgresql://dermai_user:dermai_pass_dev_only@localhost:5432/dermai_test_db
TEST_REDIS_URL=redis://:dermai_redis_pass_dev@localhost:6379/1

# =====================================
# HIPAA COMPLIANCE
# =====================================
HIPAA_AUDIT_ENABLED=True
HIPAA_AUDIT_LOG_DIR=./logs/audit
DATA_RETENTION_DAYS=2555  # 7 years (HIPAA requirement)

# =====================================
# BACKUP
# =====================================
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=./backups

# =====================================
# CELERY (Background Tasks)
# =====================================
CELERY_BROKER_URL=redis://:dermai_redis_pass_dev@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:dermai_redis_pass_dev@localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC
